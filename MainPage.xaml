<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FichaTecnicaTelas.MainPage"
             BackgroundColor="#2d2d2d">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="30">
            <Label Text="Nova Receita" FontSize="32" TextColor="White" HorizontalOptions="Center" />
            <Label Text="Nome da Receita:" TextColor="#cccccc"/>
            <Entry x:Name="txtNomeReceita" Placeholder="Ex: Bolo de Fubá" BackgroundColor="White" TextColor="Black"/>
            <BoxView HeightRequest="1" Color="Gray" Margin="0,10,0,10"/>
            <Label Text="Adicionar Ingrediente" FontSize="18" TextColor="Orange" FontAttributes="Bold"/>
            <Entry x:Name="txtNomeIngrediente" Placeholder="Nome (Ex: Farinha)" BackgroundColor="White" TextColor="Black"/>
            <Grid ColumnDefinitions="*,*">
                <Entry Grid.Column="0" x:Name="txtPreco" Placeholder="Preço (R$)" Keyboard="Numeric" BackgroundColor="White" TextColor="Black" Margin="0,0,5,0"/>
                <Entry Grid.Column="1" x:Name="txtPeso" Placeholder="Peso (g/ml)" Keyboard="Numeric" BackgroundColor="White" TextColor="Black"/>
            </Grid>
            <Button x:Name="btnAdicionar" Text="ADICIONAR INGREDIENTE" BackgroundColor="Orange" TextColor="Black" FontAttributes="Bold" HeightRequest="50" Clicked="OnAdicionarClicked"/>
            <Label x:Name="lblResumo" Text="Nenhum ingrediente adicionado." TextColor="White" HorizontalOptions="Center" Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>