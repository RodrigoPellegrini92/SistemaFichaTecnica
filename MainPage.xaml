<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FichaTecnicaTelas.MainPage"
             BackgroundColor="#2d2d2d">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="30">

            <Label Text="Nova Receita" FontSize="32" TextColor="White" HorizontalOptions="Center" />

            <Label Text="Nome da Receita:" TextColor="#cccccc"/>
            <Entry x:Name="txtNomeReceita" Placeholder="Ex: Bolo de Cenoura" BackgroundColor="White" TextColor="Black"/>

            <BoxView HeightRequest="1" Color="Gray" Margin="0,10,0,10"/>

            <Label Text="Adicionar Ingrediente" FontSize="18" TextColor="Orange" FontAttributes="Bold"/>
            <Entry x:Name="txtNomeIngrediente" Placeholder="Nome (Ex: Farinha ou Ovos)" BackgroundColor="White" TextColor="Black"/>

            <Label Text="📦 Dados da Compra (Embalagem):" TextColor="#aaaaaa" FontSize="12"/>
            <Grid ColumnDefinitions="*,*">
                <Entry Grid.Column="0" x:Name="txtPreco" Placeholder="Preço Pago (R$)" Keyboard="Numeric" BackgroundColor="White" TextColor="Black" Margin="0,0,5,0"/>
                <Entry Grid.Column="1" x:Name="txtPesoEmbalagem" Placeholder="Total (g, ml ou unid)" Keyboard="Numeric" BackgroundColor="White" TextColor="Black"/>
            </Grid>

            <Label Text="🥣 Uso na Receita:" TextColor="#aaaaaa" FontSize="12"/>
            <Entry x:Name="txtUsoReceita" Placeholder="Quanto você usou? (g, ml ou unid)" Keyboard="Numeric" BackgroundColor="#fff8e1" TextColor="Black" FontAttributes="Bold"/>

            <Button x:Name="btnAdicionar" Text="ADICIONAR INGREDIENTE" BackgroundColor="Orange" TextColor="Black" FontAttributes="Bold" HeightRequest="50" Clicked="OnAdicionarClicked"/>

            <Label Text="📝 Lista de Itens:" TextColor="Orange" Margin="0,20,0,5" FontAttributes="Bold"/>
            <Label x:Name="lblLista" Text="" TextColor="#dddddd" FontSize="16" />

            <BoxView HeightRequest="1" Color="Gray" Margin="0,10,0,10"/>

            <Label x:Name="lblResumo" Text="Nenhum ingrediente adicionado." TextColor="White" HorizontalOptions="Center" Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>